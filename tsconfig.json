{
    "compilerOptions": {
        "strict": false,
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "dist",
        "sourceMap": true,
        "lib": ["dom", "esnext"],
        "moduleResolution": "node"
    },
    "include": [
        "src",
        "tests"
    ],
    "exclude": [
        "node_modules",
    ]
}