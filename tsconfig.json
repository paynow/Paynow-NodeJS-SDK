{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": { "*": ["types/*"] },
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "declaration": true,
        "outDir": "dist/",
        "declarationDir": "dist/declarations",
        "sourceMap": true
    },
    "include": [
        "src/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
